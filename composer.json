{
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.3",
        "ramsey/uuid": "^4.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Utils/FormatDate.php",
            "app/Utils/FormatDollarAmount.php",
            "app/Utils/Redirect.php"
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.89"
    }
}
